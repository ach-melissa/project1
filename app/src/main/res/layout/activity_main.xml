<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".MainActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Calculator"
    android:textSize="25sp"
    android:gravity="center"
    android:layout_margin="10dp"
    android:id="@+id/tv_title"/>

<EditText
    android:id="@+id/etfirstvalue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tv_title"
    android:layout_margin="10dp"
    android:hint="Enter first value"
    android:inputType="numberDecimal" />

<EditText
    android:id="@+id/etsecondvalue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/etfirstvalue"
    android:layout_margin="10dp"
    android:hint="Enter second value"
    android:inputType="numberDecimal" />

<Button
    android:id="@+id/btnadd"
    android:layout_width="176dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/etsecondvalue"
    android:layout_marginVertical="10dp"
    android:text="ADD"
    android:layout_centerHorizontal="true"/>

<Button
    android:id="@+id/btnsub"
    android:layout_width="174dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/btnadd"
    android:layout_marginVertical="10dp"
    android:text="SUB"
    android:layout_centerHorizontal="true"/>

<Button
    android:id="@+id/btnmul"
    android:layout_width="178dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/btnsub"
    android:layout_marginVertical="10dp"
    android:text="MUL"
    android:layout_centerHorizontal="true"/>

<Button
    android:id="@+id/btndiv"
    android:layout_width="176dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/btnmul"
    android:layout_marginVertical="10dp"
    android:text="DIV"
    android:layout_centerHorizontal="true"/>

<TextView
    android:id="@+id/tvresult"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Result"
    android:textSize="25sp"
    android:layout_below="@id/btndiv"
    android:layout_margin="30dp"/>

</RelativeLayout>